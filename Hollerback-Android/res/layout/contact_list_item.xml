<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.moziy.hollerback.widget.CustomTextView
        android:id="@+id/tv_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_contact_type"
        android:paddingBottom="@dimen/dim_5dp"
        android:paddingLeft="@dimen/dim_20dp"
        android:paddingTop="@dimen/dim_5dp"
        android:text="Sajjad Tabib"
        android:textSize="16sp" />

    <com.moziy.hollerback.widget.CustomTextView
        android:id="@+id/tv_contact_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_contact_name"
        android:layout_toLeftOf="@+id/iv_contact_type"
        android:paddingBottom="@dimen/dim_5dp"
        android:paddingLeft="@dimen/dim_20dp"
        android:paddingTop="@dimen/dim_5dp"
        android:text="sajjad"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_contact_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/tv_contact_username"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dim_20dp"
        android:minWidth="@dimen/dim_30dp"
        android:paddingRight="5dp"
        android:src="@drawable/banana_img" />

</RelativeLayout>