<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    xmlns:staggered="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#fff" >

    <FrameLayout 
		android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
        >
		<com.moziy.hollerback.view.ScrollingSyncListView
	        android:id="@+id/hlz_video_gallery_left"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	
			>
		</com.moziy.hollerback.view.ScrollingSyncListView>
		<VideoView
			android:id="@+id/videoLeft"
			android:layout_width="match_parent"
			android:layout_height="180dp"
			android:padding="@dimen/image_thumbnail_spacing"
			android:visibility="invisible"
		/>
	</FrameLayout>
	<FrameLayout 
		android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
        >
		<com.moziy.hollerback.view.ScrollingSyncListView
	        android:id="@+id/hlz_video_gallery_right"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
			>
		</com.moziy.hollerback.view.ScrollingSyncListView>
		<VideoView
				android:id="@+id/videoRight"
				android:layout_width="match_parent"
				android:layout_height="180dp"
				android:padding="@dimen/image_thumbnail_spacing"
				android:visibility="invisible"
			/>
	</FrameLayout>
    <Button
        android:id="@+id/btn_video_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@drawable/conv_hollerback_replay"
        android:gravity="center" 
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rr_video_playback_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_video_reply"
        android:layout_below="@+id/hlz_video_gallery"
        android:background="#fff" 
        android:visibility="gone">


        <include
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            layout="@layout/progress_spinner" />

        <ImageButton
            android:id="@+id/ib_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:src="@drawable/play_circle"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>