<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:orientation="vertical"
    >	
	<ImageView 
	    android:id="@+id/imgBackground"
		android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@android:color/black"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
	    />
    

    <ImageView
        android:id="@+id/iv_green_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/padding_medium"
        android:src="@drawable/dot_blue_small"
         />

    <LinearLayout 
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerVertical="true"
        android:orientation="vertical"
		android:layout_toRightOf="@+id/iv_green_dot"
        >
	    <com.moziy.hollerback.widget.GothamRndTextView
	        android:id="@+id/tv_convoname"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="@dimen/convo_right_margin"
	        android:textSize="18sp" 
	        android:textStyle="bold"
	        android:textColor="@android:color/white"
	        android:maxLines="2"
	        android:ellipsize="end"	        
	        />   
	         
		<com.moziy.hollerback.widget.TimeStampTextView
	        android:id="@+id/tv_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:textSize="18sp" 
		/>
	</LinearLayout>
	<ImageView 
	    android:id="@+id/btnRecord"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:clickable="true"
	    android:background="@drawable/btn_record"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
		android:contentDescription="@string/app_name"
	    />
</RelativeLayout>