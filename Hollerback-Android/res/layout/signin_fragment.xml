<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.moziy.hollerback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_header"
    android:orientation="vertical"
    android:paddingTop="?android:attr/actionBarSize" >

    <include
        android:id="@+id/username_password_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_20dp"
        android:layout_marginRight="@dimen/dim_20dp"
        android:layout_marginTop="@dimen/dim_20dp"
        layout="@layout/email_password_box" />

    <com.moziy.hollerback.widget.CustomButton
        android:id="@+id/submit_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/username_password_box"
        android:layout_alignRight="@id/username_password_box"
        android:layout_below="@+id/username_password_box"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dim_20dp"
        android:layout_marginRight="@dimen/dim_20dp"
        android:text="@string/signin"
        app:tintColor="#80000000" />

</RelativeLayout>