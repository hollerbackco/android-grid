<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/action_bar_plain_layout" />

    <RelativeLayout
        android:id="@+id/rl_bx_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="#adadad"
        android:padding="1dp" >

        <EditText
            android:id="@+id/textfield_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_phone_number_code_height"
            android:background="#fff"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/textfield_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_phone_number_code_height"
            android:layout_below="@+id/textfield_email"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="17sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/submit_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_bx_1"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="@string/signin" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/action_bar_parent"
        android:background="@drawable/shadow" />

</RelativeLayout>