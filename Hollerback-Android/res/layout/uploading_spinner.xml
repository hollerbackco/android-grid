<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_upload"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:visibility="invisible" >

    <ProgressBar
        android:id="@+id/pb_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/custom_progress_spinner" />

	<TextView
        android:id="@+id/tv_progress_spinner"
        android:layout_below="@+id/pb_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/image_thumbnail_spacing"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textStyle="bold" 
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        />
</RelativeLayout>