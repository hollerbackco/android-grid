<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res/com.moziy.hollerback">

    <style name="HollerbackTheme" parent="Theme.Hollerback">
        <item name="android:buttonStyle">@style/DefaultButton</item>
        <item name="android:editTextStyle">@style/DefaultEditText</item>
        <item name="android:textViewStyle">@style/DefaultTextView</item>
        <item name="android:actionBarTabBarStyle">@style/ContactBook.ActionBar.TabBar</item>
        <item name="android:actionBarTabTextStyle">@style/ContactBook.ActionBar.TabText</item>
        <item name="android:actionBarTabStyle">@style/ContactBook.ActionBar.TabView</item>
    </style>

    <style name="HollerbackTheme.Settings">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ContactBook.ActionBar.TabView" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">@dimen/dim_8dp</item>
        <item name="android:paddingRight">@dimen/dim_8dp</item>
    </style>

    <style name="ContactBook.ActionBar.TabBar" parent="@style/Widget.Sherlock.ActionBar.TabBar">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/abs__list_divider_holo_light</item>
        <item name="android:dividerPadding">@dimen/dim_6dp</item>
    </style>

    <style name="ContactBook.ActionBar.TabText" parent="@style/Widget.Sherlock.ActionBar.TabText">
        <item name="android:textColor">@color/gray_font</item>
        <item name="android:textSize">@dimen/dim_16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DropDownNav.Example" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_example</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_example</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_example</item>
    </style>

    <style name="ProgressBar.Example" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_example</item>
    </style>

    <style name="ActionButton.CloseMode.Example" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_example</item>
    </style>

    <style name="BlueCheckBox">
        <item name="android:button">@drawable/checkbox</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="DefaultTextView" parent="@android:style/Widget.TextView">
        <item name="typeface">GothamRnd-Medium</item>
        <!-- <item name="android:shadowColor">#000000</item> -->
        <!-- <item name="android:shadowDx">1.0</item> -->
        <!-- <item name="android:shadowDy">1.0</item> -->
        <!-- <item name="android:shadowRadius">0.5</item> -->

    </style>

    <style name="DefaultButton" parent="@android:style/Widget.Holo.Button">
        <item name="typeface">GothamRnd-Medium</item>
    </style>

    <style name="DefaultButton.Small" parent="@android:style/Widget.Holo.Button.Small">
        <item name="typeface">GothamRnd-Medium</item>
    </style>

    <style name="DefaultEditText" parent="@android:style/Widget.EditText">
        <item name="typeface">GothamRnd-Medium</item>
        <item name="android:paddingBottom">@dimen/dim_10dp</item>
        <item name="android:paddingTop">@dimen/dim_10dp</item>
        <item name="borderWidth">@dimen/dim_1dp</item>
        <item name="borderColor">#000000</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">#44000000</item>
        <item name="android:textColor">#88000000</item>
        <item name="android:paddingLeft">@dimen/dim_60dp</item>
    </style>

    <style name="DefaultDialogStyle" parent="@android:style/Theme.Holo.Light.Dialog"></style>

</resources>