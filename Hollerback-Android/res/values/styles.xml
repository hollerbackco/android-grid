<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Hollerback">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#ffffffff</item>
    </style>
    
	<style name="HollerbackTheme" parent="Theme.Sherlock.Light">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionBarStyle">@style/HollerbackTheme.ActionBarStyle</item>
        <item name="homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_light</item>
        
        <item name="actionBarStyle">@style/Widget.Splash.ActionBar</item>
        
        <item name="textColorPrimary">@color/abs__primary_text_holo_light</item>
        <item name="textColorPrimaryDisableOnly">@color/abs__primary_text_disable_only_holo_light</item>
        <item name="textColorPrimaryInverse">@color/abs__primary_text_holo_dark</item>
        <item name="textAppearanceSmall">@style/TextAppearance.Sherlock.Light.Small</item>
	</style>
    
	<style name="HollerbackTheme.ActionBarStyle" parent="Widget.Sherlock.Light.ActionBar">
        <item name="titleTextStyle">@style/SplashTheme.ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="HollerbackTheme.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
	<style name="Widget.Splash.ActionBar" parent="Sherlock.__Widget.ActionBar">
        <item name="titleTextStyle">@style/TextAppearance.Sherlock.Widget.ActionBar.Title</item>
        <item name="subtitleTextStyle">@style/TextAppearance.Sherlock.Widget.ActionBar.Subtitle</item>
        <item name="background">@drawable/actionbar_whitebg</item>
        <item name="backgroundStacked">@drawable/actionbar_whitebg_stacked</item>
        <item name="backgroundSplit">@drawable/actionbar_whitebg_bottom</item>
        <item name="divider">?attr/dividerVertical</item>
        <item name="progressBarStyle">@style/Widget.Sherlock.ProgressBar.Horizontal</item>
        <item name="indeterminateProgressStyle">@style/Widget.Sherlock.ProgressBar</item>
        <item name="progressBarPadding">32dip</item>
        <item name="itemPadding">8dip</item>
    </style>
    
	<style name="SplashTheme.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>